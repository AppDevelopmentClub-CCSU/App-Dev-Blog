<div class="container <%= controller_name %> <%= action_name %>">
	<% provide(:page_title, "Edit #@{post.title}") %>
	<br>
	<h1>Editing Post</h1>
	<%= render 'form', post: @post %>
	<%= link_to 'Show', @post %> |
	<%= link_to 'Back', posts_path %> |
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>